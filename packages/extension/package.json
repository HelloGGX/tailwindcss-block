{
  "name": "component-market",
  "displayName": "component-market",
  "description": "VSCode 和 Trae IDE 的 Tailwind CSS 组件市场插件",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "tailwindcss-block.openComponentMarket",
        "title": "打开 Tailwind CSS 组件市场"
      },
      {
        "command": "tailwindcss-block.refreshComponents",
        "title": "刷新组件列表",
        "icon": "$(refresh)"
      },
      {
        "command": "tailwindcss-block.refreshFavorites",
        "title": "刷新收藏列表",
        "icon": "$(refresh)"
      },
      {
        "command": "tailwindcss-block.uploadComponent",
        "title": "上传组件",
        "icon": "$(cloud-upload)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "tailwindcss-block",
          "title": "Tailwind CSS 组件",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "tailwindcss-block": [
        {
          "id": "tailwindcss-components",
          "name": "组件市场"
        },
        {
          "id": "tailwindcss-favorites",
          "name": "我的收藏"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "tailwindcss-block.refreshComponents",
          "when": "view == tailwindcss-components",
          "group": "navigation"
        },
        {
          "command": "tailwindcss-block.refreshFavorites",
          "when": "view == tailwindcss-favorites",
          "group": "navigation"
        },
        {
          "command": "tailwindcss-block.uploadComponent",
          "when": "view == tailwindcss-components",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.98.0",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.25.0",
    "eslint": "^9.21.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "axios": "^1.8.3",
    "vscode": "^1.1.37"
  }
}
